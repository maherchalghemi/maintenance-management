@model GMAO.App.Entities.Devise_DTO



@using (Html.BeginForm("Add", "Devise", FormMethod.Post, new { id = "frmCreateDevise" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label class="col-md-3 control-label">Code Devise</label>
                <div class="col-xs-6">
                    <div class="input-icon">
                        <i class="fa fa-star"></i>
                        @Html.EditorFor(model => model.codeDevise, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.codeDevise, "", new { @class = "text-danger" })


                        <label id="lblmsg" class="help-block text-danger" />

                    </div>
                </div>
            </div>
        </div>

    </div>


    <hr>
            <!--/////////////////////-->
    <div class="portlet-body form">


        <div class="form-body">
            <h3 class="form-section">Parametres</h3>

            <!--/row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Designation</label>
                        </div>
                        <div class="col-md-9">
                            <div class="input-icon">
                                <i class="fa fa-star"></i>
                                @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })


                                <label id="lblmsg1" class="help-block text-danger" />

                            </div>
                        </div>

                    </div>
                </div>
                <br /><br /><br />
                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Décimale</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" class="form-control">
                        </div>

                    </div>
                </div>
                <br /><br /><br />
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Nb.</label>
                        </div>
                        <div class="col-md-9">
                            <input type="text" class="form-control">
                        </div>

                    </div>
                </div>
            </div>
            <br /><br />


            <!--/span-->
        </div>
    </div>




    <div class="form-actions left">
        <button type="button" class="btn default">Annuler</button>
        <input type="button" value="Ajouter" class="btn blue" id="createButton" />


    </div>



        <!--/////////////////-->


}




@section scripts{
    <script language="JavaScript" type="text/javascript">
    //alert('Input can not be left blank');

    $(document).ready(function () {
        $("#createButton").click(function (event) {

           // alert('Input can not be left blank');

            var form = $("#frmCreateDevise");

            event.preventDefault();


             $.ajax(
                    {


             url: '@Url.Action("Add","Devise")',
            data: form.serialize(),
            type: 'POST',


             success: function (result) {
                  if (result == true) {
                      // alert('Input can not be left blank');
                      //alert(result);
                      //window.location.reload();
                      $('#lblmsg').html("");
                      $('#lblmsg1').html("");

                      document.getElementById("codeDevise").style.borderColor = "#00FF80";
                      document.getElementById("Designation").style.borderColor = "#00FF80";

                      toastr.success('Fournisseur ajouté', 'hhhhhhh');


                  }

                  else if (result == false) {

                      if (document.getElementById("codeDevise").value == "") {
                     $('#lblmsg').html("Four vide");
                     document.getElementById("codeDevise").focus();
                     document.getElementById("codeDevise").style.borderColor = "red";
                      }

                      if (document.getElementById("Designation").value == "") {
                          $('#lblmsg1').html("Four vide");
                          document.getElementById("Designation").focus();
                          document.getElementById("Designation").style.borderColor = "red";
                      }


            toastr.error('ERREUR');
                  }



              },
             error: function (result) {

              }
          });
        });
    });
    </script>
}













