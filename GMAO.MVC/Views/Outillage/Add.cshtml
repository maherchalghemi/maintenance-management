@model GMAO.App.Entities.Outillage_DTO



@using (Html.BeginForm("Add", "Outillage", FormMethod.Post, new { id = "frmCreateUser" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label class="col-md-3 control-label">Code Outil</label>
                <div class="col-xs-6">
                    <div class="input-icon">
                        <i class="fa fa-star"></i>
                        @Html.EditorFor(model => model.codeoutil, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.codeoutil, "", new { @class = "text-danger" })


                        <label id="lblmsg" class="help-block text-danger" />

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
            <div class="form-group">
                <label class="col-md-3 control-label">Designation</label>
                <div class="col-xs-6">
                    <div class="input-icon">
                        <i class="fa fa-star"></i>
                        @Html.EditorFor(model => model.designation, new { htmlAttributes = new { @class = "form-control " } })
                        @Html.ValidationMessageFor(model => model.designation, "", new { @class = "text-danger" })


                        <label id="lblmsg1" class="text-danger" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
            <!--/////////////////////-->
    <div class="portlet-body form">


        <div class="form-body">
            <h3 class="form-section">Parametres</h3>

            <!--/row-->
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Categorie</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Etat</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <br /><br /><br />
                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">N° Serie</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>

                    </div>
                </div>
                <br /><br /><br />
                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Code a Barre In</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Code a Barre Ext</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <br /><br /><br />
                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Fournisseur</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <label class="control-label">Rangement</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                </div>
                <br /><br /><br />
                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label">Caracteristques</label>
                        </div>
                        <div class="col-md-6">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>

                    </div>
                </div>

                <br /><br /><br />
                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label">Observation</label>
                        </div>
                        <div class="col-md-6">
                            <textarea class="form-control" rows="3"></textarea>
                        </div>

                    </div>
                </div>



                <div class="col-md-12">

                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Prix Unitaire HT</label>
                        </div>
                        <div class="col-md-3">
                            <input type="text" class="form-control">
                        </div>

                    </div>
                </div>



            </div>
            <br /><br />


            <!--/span-->
        </div>
    </div>




    <div class="form-actions left">
        <button type="button" class="btn default">Annuler</button>
        <input type="button" value="Ajouter" class="btn blue" id="createButton" />


    </div>



        <!--/////////////////-->


}



@section scripts{
    <script language="JavaScript" type="text/javascript">
    //alert('Input can not be left blank');

    $(document).ready(function () {
        $("#createButton").click(function (event) {

           // alert('Input can not be left blank');

            var form = $("#frmCreateUser");

            event.preventDefault();


             $.ajax(
                    {


             url: '@Url.Action("Add","Outillage")',
            data: form.serialize(),
            type: 'POST',


             success: function (result) {
                  if (result == true) {
                      // alert('Input can not be left blank');
                      //alert(result);
                      //window.location.reload();
                      $('#lblmsg').html("");
                      $('#lblmsg1').html("");
                      document.getElementById("codeoutil").style.borderColor = "#00FF80";
                      document.getElementById("designation").style.borderColor = "#00FF80";

                      toastr.success('Fournisseur ajouté', 'hhhhhhh');


                  }

                  else if (result == false) {

                      if (document.getElementById("codeoutil").value == "") {
                     $('#lblmsg').html("Four vide");
                 document.getElementById("codeoutil").focus();
                 document.getElementById("codeoutil").style.borderColor = "red";
             }
                 if (document.getElementById("designation").value == "") {
                     $('#lblmsg1').html("nom vide");
                     document.getElementById("designation").focus();
                     document.getElementById("designation").style.borderColor = "#F78181";

                 }

            toastr.error('ERREUR');
                  }



              },
             error: function (result) {

              }
          });
        });
    });
    </script>
}











