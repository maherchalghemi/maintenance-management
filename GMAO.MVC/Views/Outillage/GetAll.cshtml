@model IEnumerable<GMAO.App.Entities.Outillage_DTO>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Liste Outillages
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <button id="sample_editable_1_new" class="btn green">
                                    Ajouter <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn dropdown-toggle" data-toggle="dropdown">
                                    Tools <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            Print
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Save as PDF
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Export to Excel
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                    <thead>
                        <tr>
                            <th>
                                Etat Outillage
                            </th>
                            <th>
                                Code Outillage
                            </th>

                            <th>
                                Designation <input type="text" id="search-name" placeholder="Rechercher Nom">
                            </th>
                            <th>
                              Nb.  
                            </th>
                            <th>
                                N° Série
                            </th>
                            <th>
                                Code Barre
                            </th>
                            <th>
                                Caractéristique
                            </th>
                            <th>
                                Code Catégorie
                            </th>
                            <th>
                                Désignation
                            </th>
                            <th>
                                Observation
                            </th>
                            <th>
                                NB.EQ
                            </th>

                            <th>
                                Rangement
                            </th>
                            <th>
                                Code fournisseur
                            </th>
                            <th>
                                Nom Fr
                            </th>

                            <th>
                                Date Achat
                            </th>
                            <th>
                                Prix Achat
                            </th>
                           
                            <th>
                                Modifier
                            </th>
                            <th>
                                Supprimer
                            </th>
                        </tr>
                    </thead>
                    <tbody>




                        @foreach (var item in Model)
                        {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.etat_outillage)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.codeoutil)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.designation)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Nb_exp)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.N_série)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.code_barre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.caractéristiques)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code_famille)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Code_famille)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.observation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.nb_eq)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDLieuRangement)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Code_Fournisseur)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Code_Fournisseur)

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.date_achat)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.prix_U)
                                </td>
                                

                                <td class="success">
                                    @Html.ActionLink("update", "Update", "Outillage", new { id = item.Id })
                                </td>
                                <td class="danger">
                                    <a href="/Outillage/Delete/@item.Id" data-id="@item.Id" class="btn-delete">Delete</a>
                                    @*@Html.ActionLink("Delete", "Delete", "Outillage", new { id = item.Id }, new { @class = "btn-delete",@data-id=@item.Id})*@
                                </td>
                            </tr>



                        }
                    </tbody>
                </table>




            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

@section scripts{
    <script type="text/javascript">
                //recherch par nom
                $(document).ready(function () {
                    var table = $('#sample_editable_1').DataTable();


                    $('#search-name').on('keyup', function () {

                        table
                        .column(2)
                        .search(this.value)
                        .draw();

                    });

                });

    </script>

}











